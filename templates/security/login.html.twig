{% extends 'base.html.twig' %}

{% block body%}
    {% for message in app.flashes('message') %}
        <div class="flash-message">
            {{ message }}
        </div>
    {% endfor %}

<h1 id="login_header">Connexion</h1>

<form class="login_form" action="{{ path('security_login') }}" method="post">
    <div>
        <input placeholder="adresse e-mail" required name="_username" type="text" class="form-control"><span></span>
    </div>
     <div>
        <input placeholder="mot de passe" required name="_password" type="password" class="form-control">
    </div>
    <div id="login_button_container">
        <button type="submit">Se connecter</button>
    </div>
    <div id="login_form_forgot_link_container">
        <a id="login_form_forgot_link" href="{{ path("app_forgotten_password") }}">Mot de passe oubli√©</a>
    </div>
    
</form>

{% endblock %}
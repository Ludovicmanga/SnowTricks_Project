{% extends 'base.html.twig' %}

{% block stylesheets %}

#homeHero {
    height: 1000px; 
    background: url(img/homeHero.jpg) no-repeat center;
    background-size: 80%;
}

#homeHero h1 {
    font-size : 3em;
    text-align : center; 
    vertical-align: center;  
}

.row {
    display: flex;
    margin-right : 30px; 
    margin-left: 30px; 
    margin-top: 10px; 
    margin-bottom: 10px; 
    width : 60%;
}

.trick {
    margin-left: 5px; 
    margin-right: 5px;
    border: solid black 2px;
    border-radius: 10px;
}

.trick img {
    height: 180px;
    border: solid black 0.5px;
}

.trickContentContainer {
    display: flex;
    justify-content: space-between; 
}

.iconContainer {
    display: flex;
    justify-content: flex-end;
    padding-top: 10px;
}

.titleContainer {
    margin-left: 46px;
}

.icon {
    margin-right: 15px;
}

#loadMoreButtonContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
}

#loadMoreButtonContainer button {
    height: 80px;
    width: 120px;
    border-radius: 20px;
}

{% endblock %}

